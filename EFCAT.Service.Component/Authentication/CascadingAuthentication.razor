@using EFCAT.Service.Authentication
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject AuthenticationStateProvider AuthenticationProvider
@typeparam Type


<CascadingValue Value="AuthenticationService" IsFixed=true>
    <CascadingValue Value="Account" IsFixed=true>
        @ChildContent
    </CascadingValue>
</CascadingValue>

@code {
    public IAuthenticationService<Type> AuthenticationService { get => ((IAuthenticationService<Type>)AuthenticationProvider); }
    public Type Account { get => AuthenticationService.GetAccount(); }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}